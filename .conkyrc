conky.config = {
	alignment = 'top_right',
	background = true,
	color2 = 'e0e2e3',
	cpu_avg_samples = 2,
	default_color = '9E8ED6',
	double_buffer = true,
	font = 'DejaVu Sans Mono Boot:size=10',
	draw_shades = false,
	gap_x = 25,
	gap_y = 25,
	minimum_width = 250,
	no_buffers = true,
	own_window = true,
	own_window_class = "Conky",
	own_window_type = 'desktop',
	own_window_transparent = true,
	update_interval = 2.0,
	use_xft = true,c
}
conky.text = [[
${alignc}S Y S T E M    I N F O
${hr}
#Host:${alignr}${nodename}
Uptime:${alignr}${uptime}
#UTC:${alignr}${utime %H:%M}
Update: ${alignr}${execpi 3600 checkupdates | wc -l}
#######################################################

CPU:${goto 60}Used${alignr}GHz
Avg${goto 60}${cpu cpu0}%${alignr}${freq_g}
#$cpugraph
#$cpubar
#######################################################

${goto 60}MEM${alignr}MAX
RAM${goto 60}${mem}${alignr}${memmax}
Swap${goto 60}${swap}${alignr}${swapmax}
#$memgraph
#$membar
#######################################################

${goto 60}Used${alignr}Size
Root${goto 60}${fs_used /}${alignr}${fs_size /}
Home${goto 60}${fs_used /home}${alignr}${fs_size /home}
#######################################################

Core 0: ${goto 60}${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp2_input | cut -c-2 }째C $alignr high: +76.0째C
Core 1: ${goto 60}${exec cat /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp3_input | cut -c-2 }째C $alignr high: +76.0째C

