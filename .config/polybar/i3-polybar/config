#######################################
## workspaces | рабочие пространства ##
#######################################
##This module uses the i3 ipc to display information about workspaces and active mode.
##Модуль для отображения информации о рабочих пространствах и активном режиме;
##https://github.com/polybar/polybar/wiki/Module:-i3
[module/i3]
type = internal/i3

format = <label-state> <label-mode>
index-sort = false
enable-click = true
enable-scroll = true
wrapping-scroll = true
reverse-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.indicator.foreground}
label-mode-background = ${colors.indicator.background}


label-focused = %icon%
label-focused-foreground = ${colors.focused.foreground}
label-focused-background = ${colors.focused.background}
label-focused-underline = ${colors.focused.underline}
label-focused-padding = 2


label-unfocused = %icon%
label-unfocused-foreground = ${colors.unfocused.foreground}
label-unfocused-background = ${colors.unfocused.background}
label-unfocused-underline = ${colors.unfocused.underline}
label-unfocused-padding = 2


label-urgent = %icon%
label-urgent-foreground = ${colors.urgent.foreground}
label-urgent-background = ${colors.urgent.background}
label-urgent-underline = ${colors.urgent.underline}
label-urgent-padding = 2


### visible = Active workspace on unfocused monitor
### Активное рабочее пространство на несфокусированном мониторе
#label-visible = %icon%
#label-visible-foreground = ${colors.urgent.foreground}
#label-visible-background = ${colors.urgent.background}
#label-visible-underline = ${colors.urgent.underline}
#label-visible-padding = 2


ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10

#Separator in between workspaces
#label-separator = |
#label-separator-foreground = #626675


###################################
## FILESYSTEM | ФАЙЛОВАЯ СИСТЕМА ##
###################################
## File system free space module
##Модуль свободного места файловой системы
##https://github.com/polybar/polybar/wiki/Module:-filesystem

[module/filesystem]
type = internal/fs
interval = 30

#mount-1 = /
mount-0 = /home
#mount-2 = /boot

label-mounted =  %mountpoint%: %percentage_used%%
label-mounted-foreground = ${colors.foreground.filesystem}
label-mounted-background = ${colors.background.filesystem}

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground.filesystemunmounted}

label-mounted-padding = 3





########################
## VOLUME | ГРОМКОСТЬ ##
########################
## Sound control module via pulseaudio
## Модуль управления звуком через pulseaudio
## https://github.com/polybar/polybar/wiki/Module:-pulseaudio


[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
format-volume = %{F#399169}<ramp-volume><label-volume> <bar-volume>
label-volume = %{F#399169} %percentage%%
label-volume-foreground = ${root.foreground}
label-muted =  muted
label-muted-foreground = #19573A


bar-volume-width = 15
bar-volume-foreground-0 = #389E71
bar-volume-foreground-1 = #389E71
bar-volume-foreground-2 = #389E71
bar-volume-foreground-3 = #389E71
bar-volume-foreground-4 = #389E71
bar-volume-foreground-5 = #389E71
bar-volume-foreground-6 = #389E71
bar-volume-foreground-7 = #50B56C
bar-volume-foreground-8 = #50B56C
bar-volume-foreground-9 = #50B56C
bar-volume-foreground-10 = #50B56C
bar-volume-foreground-11 = #50B56C
bar-volume-foreground-12 = #50B56C
bar-volume-foreground-13 = #27C753
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 8
bar-volume-fill = |
bar-volume-fill-font = 10
bar-volume-empty = |
bar-volume-empty-font = 6
bar-volume-empty-foreground = 1C562C

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 







