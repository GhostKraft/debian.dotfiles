##########################################################
##########################################################
###  BASIC PANEL SETTINGS | ОСНОВНЫЕ НАСТРОЙКИ ПАНЕЛИ  ###
##########################################################
##########################################################
### specify the name of the bar to which launch.sh startup script will turn
### указываем название бара к которому будет обрящаться скрипт автозапуска launch.sh
### [bar/bar NAME]


[bar/polybar]
### Panel width
### Ширина панели
width = 100%

### panel height
### высота панели 
height = 24


### Primary panel colors
### Основные цвета панели
background = ${colors.background}
foreground = ${colors.foreground}


### Change polybar location - bottom
### Поменять расположение polybar - низ
bottom = true


### Panel Offset 
### Смещение панели 
#offset-x = 1%
#offset-y = 1%


### rounding edges
### закругление по краям панели
radius = 0.0 


### fixed center or dynamic
### зафиксированый центр или динамический true / false
fixed-center = false 


### the panel locale is responsible for displaying some data such as date
### локаль панели отвечает за вывод некотрых данных например дата
locale = ru_RU.UTF-8 



### bottom line size under the modules
### размер нижней линии под модулями
line-size = 3
#line-color = #6D6DAB



### Border around the panel
### Рамка вокруг панели
#border-size = 0
#border-top-size = 4
#border-bottom-size = 4
#border-left-size = 1
#border-right-size = 1
#border-color = #1B1D24


### padding the contents of the panel from the edge
### отступы содержимого панели от края
padding-left = 0
padding-right = 0


### margin between modules
### отступы между модулями
module-margin-left = 1
module-margin-right = 1
#module-margin = 1


### FONTS
### ШРИФТЫ
#font-0 = DejaVu Sans:pixelsize=10;2
#font-0 = Droid Sans:pixelsize=10;2
font-0 = DejaVu Sans:weight=bold:fontformat=truetype:size=9:antialias=true;2
#font-0 = Ubuntu:weight=bold:fontformat=truetype:size=10:antialias=true;2
#font-0 = Roboto Condensed:weight=bold:fontformat=truetype:size=12:antialias=true;2
font-1 = FontAwesome 5 Free:style=Solid:size=10;2
font-2 = FontAwesome 5 Free:style=Regular:pixelsize=10;2
font-3 = FontAwesome 5 Brands:pixelsize=11;2


### system tray location and color
### расположение, цвет системного лотка none|right|center|left
tray-position = right
tray-padding = 1
tray-detached = false
tray-background = ${colors.background.tray}
#tray-transparent = true
#tray-maxsize = 16


### Requires polybar to be built with xcursor support (xcb-util-cursor)
### Changes the cursor when hovering over active polybar icons
### Требуется сборка polybar с поддержкой xcursor (xcb-util-cursor)
### Меняет вид курсора при наведении на активные иконки polybar 
### default | pointer | ns-resize
cursor-click = pointer
cursor-scroll = default


### Currently supported WM's
### Коректная поддержка оконного менеджера
#wm-restack = bspwm
wm-restack = i3
#override-redirect = true


### Location and activation of modules
### асположение и активация модулей
modules-left = i3 browser audacious vlc lxtask keepassxc term cherrytree fm filesystem title
modules-center =
modules-right = xkeyboard pulseaudio network cpu memory temperature3 date powermenu


### Scrolling workspaces anywhere in the panel
### Прокрутка рабочих пространств в любом месте панели
#scroll-up = i3wm-wsnext
#scroll-down = i3wm-wsprev
#scroll-up = bspwm-desknext
#scroll-down = bspwm-deskprev

### For configuring multiple monitors
### Опция для настройки нескольких 
#monitor = ${env:MONITOR:HDMI-1}



#[settings]
### Прозрачность
#pseudo-transparency = true







