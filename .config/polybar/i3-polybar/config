##############################################
## CPU TEMPERATURE | ТЕМПЕРАТУРА ПРОЦЕССОРА ##
##############################################
## Core3 temperature display module
## Модуль отображения температуры core3
# https://github.com/polybar/polybar/wiki/Module:-temperature

### upon reaching a critical mark, the module changes color to the one we set in label-warn
### при достижении критической отметки модуль меняет цвет на тот который мы зададим в label-warn

[module/temperature3]
type = internal/temperature
thermal-zone = 0
interval = 10
warn-temperature = 65
### path to the file responsible for the core temperature
### путь к файлу отвечающему за температуру ядра
hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon1/temp3_input

label =  TEM %temperature-c%
label-foreground = ${colors.foreground.temperature3}
label-warn =  TEMP %temperature-c%
label-warn-foreground = ${colors.foreground.temperature3warn}
format-background = ${colors.background.temperature3}
#label-warn-background = ${colors.background.temperature3warm}
#format-underline = ${colors.underline.temperature3}
#format-warn-underline = ${colors.underline.temperature3warn}
#format-overline = #DFC257
label-warn-padding = 2
label-padding = 2






#########################
## DATE | ДАТА и ВРЕМЯ ##
#########################
## Time and date module
## Модуль времени и даты
#https://github.com/polybar/polybar/wiki/Module:-date

[module/date]
type = internal/date
interval = 1
date =
time =  %H:%M:%S
label-foreground = ${colors.foreground.date}
date-alt =  %a %e %B %Y
time-alt =  %H:%M

#label = %{A1:gsimplecal & disown:} %{A3:gsimplecal & disown:} %time%%{A} %{A}
label =%{A3:gsimplecal & disown:} %date% %time%%{A} %{A}
format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-background = ${colors.background.date}
#format-underline = ${colors.underline.date}
#format-overline = #7163AF
#format-foreground = #E0D9FF

label-padding-left = 1
label-padding-right = 2






