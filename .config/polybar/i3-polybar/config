####################
## NETWORK | СЕТЬ ##
####################
### Internet connection module
### Модуль интернет соединения


[module/network]
type = custom/script
#format = <label>
interval = 2

format-prefix = 
#exec = "nmcli g | awk 'NR==2{print $1}'"
#exec = "nmcli c | awk 'NR==2{print $6}'"
exec = ping -q -w1 -c1 archlinux.org &>/dev/null && echo ONLINE || echo offline



label-foreground = ${colors.foreground.network}
format-prefix-foreground = ${colors.foreground.network}
label-background = ${colors.background.network}
format-prefix-background = ${colors.background.network}

#format-underline = ${colors.underline.network}
#format-prefix-underline = ${colors.underline.network}

click-left = nm-connection-editor
#click-right = urxvt -e speedtest-cli

format-prefix-padding-left = 2
format-prefix-padding-right = 0
label-padding = 2




