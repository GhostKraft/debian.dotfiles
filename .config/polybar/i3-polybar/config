#######################################
## workspaces | рабочие пространства ##
#######################################
##This module uses the i3 ipc to display information about workspaces and active mode.
##Модуль для отображения информации о рабочих пространствах и активном режиме;
##https://github.com/polybar/polybar/wiki/Module:-i3
[module/i3workspaces]
type = internal/i3

format = <label-state><label-mode>
index-sort = false
enable-click = true
enable-scroll = true
wrapping-scroll = true
reverse-scroll = false
label-mode-padding = 3
label-mode-foreground = #000
label-mode-background = ${colors.primary}


label-focused = %icon%
label-focused-background = 6767AE
label-focused-foreground = EBEBEB
label-focused-padding = 3
#label-focused-underline = 9F9FB7
#label-focused-overline = ${colors.primary}


label-unfocused = %icon%
label-unfocused-background = 4F4F83
label-unfocused-foreground = C6C6E2
label-unfocused-padding = 3
#label-unfocused-underline = 58587D
#label-unfocused-overline = ${colors.background}


label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.foreground}
label-urgent-padding = 3
#label-urgent-underline = ${colors.alert}
#label-urgent-overline = ${colors.background}


label-visible = %icon%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-padding = 3
#label-visible-underline = ${colors.background}
#label-visible-overline = ${colors.background}


ws-icon-0 = 1;I
ws-icon-1 = 2;II
ws-icon-2 = 3;III
ws-icon-3 = 4;IV
ws-icon-4 = 5;V
ws-icon-5 = 6;VI
ws-icon-6 = 7;VII
ws-icon-7 = 8;VIII
ws-icon-8 = 9;IX
ws-icon-9 = 10;X

#Separator in between workspaces
#label-separator = |





###################################
## FILESYSTEM | ФАЙЛОВАЯ СИСТЕМА ##
###################################
## File system free space module
##Модуль свободного места файловой системы
##https://github.com/polybar/polybar/wiki/Module:-filesystem

[module/filesystem]
type = internal/fs
interval = 30

mount-0 = /
mount-1 = /home
#mount-2 = /boot

label-mounted =  %mountpoint%: %percentage_used%%
#label-mounted = %{F#1C1C1C} %mountpoint%: %used% из %total%  %percentage_used%%
label-mounted-foreground = ${colors.foreground.filesystem}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground.filesystemunmounted}

#Фон для модуля
label-mounted-background = ${colors.background.filesystem}

#отступы между модулями
label-mounted-padding = 3





########################
## VOLUME | ГРОМКОСТЬ ##
########################
## Sound control module via pulseaudio
## Модуль управления звуком через pulseaudio
## https://github.com/polybar/polybar/wiki/Module:-pulseaudio


[module/pulseaudio]
type = internal/pulseaudio
format-volume = %{F#389E71}<ramp-volume><label-volume> <bar-volume>
label-volume = %{F#389E71} %percentage%%
label-volume-foreground = ${root.foreground}
label-muted =   muted
label-muted-foreground = #19573A


bar-volume-width = 15
bar-volume-foreground-0 = #389E71
bar-volume-foreground-1 = #389E71
bar-volume-foreground-2 = #389E71
bar-volume-foreground-3 = #389E71
bar-volume-foreground-4 = #389E71
bar-volume-foreground-5 = #389E71
bar-volume-foreground-6 = #389E71
bar-volume-foreground-7 = #50B56C
bar-volume-foreground-8 = #50B56C
bar-volume-foreground-9 = #50B56C
bar-volume-foreground-10 = #50B56C
bar-volume-foreground-11 = #50B56C
bar-volume-foreground-12 = #50B56C
bar-volume-foreground-13 = #27C753
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 8
bar-volume-fill = |
bar-volume-fill-font = 10
bar-volume-empty = |
bar-volume-empty-font = 6
bar-volume-empty-foreground = 1C562C

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-4 = 







